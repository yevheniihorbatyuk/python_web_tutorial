# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-event-hub-dev-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database - PostgreSQL (recommended)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=eventhub
DATABASE_USER=eventhub
DATABASE_PASSWORD=eventhub_pass
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Or SQLite for development
# DATABASE_ENGINE=django.db.backends.sqlite3
# DATABASE_NAME=db.sqlite3

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email (optional - uses console backend by default)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Mock Payments
MOCK_PAYMENT_SUCCESS_RATE=0.95
MOCK_PAYMENT_PROCESSING_DELAY=2

# Stripe (for future integration)
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
