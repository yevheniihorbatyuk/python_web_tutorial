# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/contacts_db

# JWT
JWT_SECRET_KEY=change-this-to-a-random-32-character-secret
JWT_REFRESH_SECRET=change-this-to-another-random-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email verification token (separate from auth JWT)
EMAIL_TOKEN_SECRET=another-random-32-character-secret
EMAIL_TOKEN_EXPIRE_HOURS=24

# SMTP — Development: MailHog (included in docker-compose, no credentials needed)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=noreply@contacts.local
SMTP_PASSWORD=
SMTP_FROM=noreply@contacts.local
SMTP_FROM_NAME=Contacts App
MAIL_STARTTLS=false
MAIL_SSL_TLS=false

# SMTP — Production: uncomment and fill in
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-gmail@gmail.com
# SMTP_PASSWORD=your-16-char-gmail-app-password
# SMTP_FROM=your-gmail@gmail.com
# SMTP_FROM_NAME=Contacts App
# MAIL_STARTTLS=true
# MAIL_SSL_TLS=false

# Cloudinary — sign up free at https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Redis
REDIS_URL=redis://redis:6379/0

# App
FRONTEND_URL=http://localhost:3000
DEBUG=true
